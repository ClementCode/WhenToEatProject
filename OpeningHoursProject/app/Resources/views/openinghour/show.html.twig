{% extends 'base.html.twig' %}

{% block body %}
    <h1>Horaire</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ openingHour.id }}</td>
            </tr>
            <tr>
                <th>Hours</th>
                <td>{{ openingHour.hours }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('openinghour_index') }}">Retour</a>
        </li>
        <li>
            <a href="{{ path('openinghour_edit', { 'id': openingHour.id }) }}">Modifier cet horaire</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer cet horaire">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
