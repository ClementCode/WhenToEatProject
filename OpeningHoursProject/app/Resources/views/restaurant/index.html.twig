{% extends 'base.html.twig' %}

{% block title %}Liste{% endblock %}

{% block body %}
    <h1>Liste des Restaurants</h1>

    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurant in restaurants %}
            <tr>
                <td>{{ restaurant.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('restaurant_show', { 'id': restaurant.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('restaurant_edit', { 'id': restaurant.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('restaurant_new') }}">Ajouter un nouveau restaurant</a>
        </li>
    </ul>

    <ul>
        <li>
            <a href="{{ path('openinghour_new') }}">Cr√©er un nouvel horaire</a>
        </li>
    </ul>
{% endblock %}
